<!-- Home page content -->
<h1> <%= title %> </h1>

<!-- If user is signed in show the posts-->
<% if(locals.user){ %>
    <section id="feed-post">
        <h4>Posts</h4>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" id="content" cols="30" rows="3" placeholder="Add your thoughts here"></textarea>
            <input type="submit" value="Post">
        </form>
        <div id="posts-list-container">
            <ul>
                <% for(let post of posts){ %>
                    <li>
                        <p>
                            <%= post.content %>
                            <br>
                            <%= post.user.name %>
                        </p>
                    </li>
                <% } %>
            </ul>
        </div>
    </section>
<% } %>

